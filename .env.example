# ============================================
# Variables de entorno del Agente de IA
# Copia este archivo como .env y edita los valores
# cp .env.example .env
# ============================================

# --- Ollama ---
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=gpt-oss:20b
EMBEDDING_MODEL=nomic-embed-text
OLLAMA_TIMEOUT=120
# false | true | low | medium | high
OLLAMA_THINK=high

# --- Servidor ---
HOST=0.0.0.0
PORT=8000
RELOAD=false

# --- Contexto ---
MAX_CONTEXT_MESSAGES=20

# --- Telegram (configurar en Fase 4) ---
TELEGRAM_BOT_TOKEN=tu_token_aqui
TELEGRAM_USER_ID=tu_id_aqui

# --- Web search (opcional: mejora fallback si DuckDuckGo falla) ---
BRAVE_API_KEY=tu_api_key_brave

# --- Logging ---
LOG_LEVEL=INFO

# --- Arranque de stack multimedia (macOS) ---
# Si es true, al iniciar RUFÃœS se intentan levantar automaticamente:
# Radarr (7878), Prowlarr (9696), Transmission (9091) y Jellyfin (8096)
RUFUS_START_MEDIA_STACK=false
